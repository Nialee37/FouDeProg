        <Label x:Name="lbl_nomUtilisateur_Copy1" Content="Nom d'utilisateur :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,145,0,0" Height="34" Width="196" FontFamily="SimSun" FontSize="18"/>
        <Label x:Name="lbl_mdp_Copy1" Content="Mot de passe :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,202,0,0" Height="40" Width="150" FontFamily="SimSun" FontSize="18" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="Black" BorderThickness="0"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="266,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="14"/>
        <PasswordBox HorizontalAlignment="Left" Height="25" Margin="266,210,0,0" VerticalAlignment="Top" Width="192"/>
