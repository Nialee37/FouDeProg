        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunEnBulles"
        mc:Ignorable="d"
        Title="Connexion" Height="494.492" Width="490.146">
    <Grid>
        <Label Content="CONNEXION" Margin="115,31,0,0" VerticalAlignment="Top" Height="58" IsEnabled="False" Cursor="Hand" FontSize="36" FontFamily="Stencil" Foreground="#FF494949" HorizontalAlignment="Left" Width="223"/>
